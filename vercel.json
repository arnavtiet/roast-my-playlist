{
    "buildCommand": "npm install --prefix client && npm run build --prefix client && npm install --prefix server",
    "outputDirectory": "client/dist",
    "installCommand": "echo 'Dependencies installed via buildCommand'",
    "devCommand": "cd client && npm run dev",
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/api/index"
        }
    ]
}